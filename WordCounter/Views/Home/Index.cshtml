@{
  Layout = "_Layout";
}

<h1>Word Counter</h1>

<div class="container">
  <h2>Find out how many times your word appears in the sentence</h2>

  <form action="/result" method="post">
    <label for="sentence">Enter Sentence:</label>
    <input type="text" id="sentence" class="form-control" name="sentence">
    <label for="searchWord">Enter Search Word:</label>
    <input type="text" id="searchWord" class="form-control" name="searchWord">
    <button class="btn btn-default" id="indexSubmit">Find out</button>
  </form>
</div>
